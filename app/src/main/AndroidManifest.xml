<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dingmouren.androiddemo">
    <!--手机振动的权限-->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!--获取手机通讯录权限-->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!--修改手机桌面的权限-->
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <!--获取SIM卡信息的权限-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--获取进程的权限-->
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <!--打电话的权限-->
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <!--网路权限-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.VibratorActivity"
            android:launchMode="singleTask"
            />
        <activity android:name=".activity.ContactsActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.SIMActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.RuningTasksActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.ScreenDirectionActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor"/>
        <activity android:name=".activity.BatteryActivity"
            android:launchMode="singleTask"
            />
        <activity android:name=".activity.EventActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.RecyclerCustomAnimationActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.Demo1Activity"/>
        <activity android:name=".activity.Demo2Activity"/>
        <activity android:name=".activity.Demo3Activity"/>
        <!--广播-->
    </application>

</manifest>